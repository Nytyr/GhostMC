<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/GhostActionBar</item>
        <item name="android:windowBackground">@color/green_light</item>
    </style>

    <style name="GhostTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GhostActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green_dark</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="LogoDialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
